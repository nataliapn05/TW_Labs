@model eUseControl.Web.Models.UserLogin
@using System.Web.Optimization
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<!DOCTYPE html>
<html>
<head>
</head>
<body class="blank">
    <div class="login-container">
        <div class="row">
            <div class="col-md-10">
                <div class="text-center m-b-md">
                    <h3> LOGIN</h3>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <form  id="loginForm" novalidate>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Username, new
                               {
                                   type = "Username",
                                   name = "Username",
                                   placeholder = "example@gmail.com",
                                   title = "Please enter you username",
                                   value = "",
                                   id = "username",
                                   @class = "form-control"
                               })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Password, new 
                                {
                                @class="form-control",
                                type="password",
                                title="Please enter your password" ,
                                placeholder="******" ,
                                value="",
                                name="password",
                                id="password"
                                })
                                </div>
                                <button class="btn btn-success btn-block" type="submit">Login</button>
                                <a class="btn btn-default btn-block" href="@Url.Action("Register", "Authentification")">Register</a>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    @section Scripts{
        @Scripts.Render("~/bundles/validation/js")
        
        <script type="text/javascript">
            $(function () {
                $("#LoginForm").validate({
                    rules: {
                        Username: {
                            required: true
                        },
                        Password: {
                            required: true
                        }
                    },
                    submitHandler: function (form) {
                        form.submit();
                    },
                    errorPlacement: function (error, element) {
                        $(element)
                            .closeset("form")
                            .find("label[for='" + element.attr("id") + "']")
                            .append(error);
                    },
                    errorElement: "span"
                });
            });
        </script>
        }
</body>
</html>