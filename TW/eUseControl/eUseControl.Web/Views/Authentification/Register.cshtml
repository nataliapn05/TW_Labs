@using System.Web.Optimization
@model eUseControl.Web.Models.UserRegister
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
}
<!DOCTYPE html>
<html>
<head>
</head>
<body class="blank">
    <div class="register-container">
        <div class="row">
            <div class="col-md-3" style="color: transparent;"></div>
                <div class="col-md-6">
                    <div class="text-center m-b-md">
                        <h3>Registration</h3>
                    </div>
                    <div class="hpanel">
                        <div class="panel-body">


                            @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Username, new
                                    {
                                        placeholder = "...",
                                        title = "Enter the username",
                                        value = "",
                                        name = "name",
                                        id = "name",
                                        @class = "form-control",
                                        type = "username"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Password, new
                                    {
                                        placeholder = "...",
                                        title = "Introduceti parola",
                                        value = "*",
                                        name = "parola",
                                        id = "parola",
                                        @class = "form-control",
                                        type = "password"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Email, new
                                    {
                                        placeholder = "...",
                                        title = "Introduceti email-ul",
                                        value = "",
                                        name = "email",
                                        id = "email",
                                        type = "email",
                                        @class = "form-control"
                                    })
                                </div>
                            }

                            <div class="text-center">
                                <button class="btn btn-success">
                                <a href="@Url.Action("Index","Authentification")">Register</a></button>
                                
                            </div>

                        </div>
                    </div>
                </div>
            </div>
    </div>
</body>
</html>